<idea-plugin version="2">
	<id>consulo.lombokpg</id>
	<name>Lombok-Pg Support</name>
	<vendor>MustBe.org</vendor>
	<category>Language Extensions</category>
	<version>SNAPSHOT</version>
	<depends>consulo.lombok</depends>
	<depends optional="true" config-file="org.jetbrains.idea.maven.xml">org.jetbrains.idea.maven</depends>

	<extensions defaultExtensionNs="com.intellij">
		<moduleExtensionProvider key="lombok-pg"
								 parentKey="lombok"
								 name="Lombok-pg"
								 icon="/consulo/lombok/pg/icons/lombok.png"
								 immutableClass="org.consulo.lombok.pg.module.extension.LombokPgModuleExtension"
								 mutableClass="org.consulo.lombok.pg.module.extension.LombokPgMutableModuleExtension"/>
	</extensions>

	<extensions defaultExtensionNs="org.consulo.java">
		<augmentProvider implementation="org.consulo.lombok.pg.psi.augment.LombokPgPsiAugmentProvider"/>
	</extensions>

	<extensions defaultExtensionNs="consulo.lombok">
		<processor annotationClass="lombok.AutoGenMethodStub" implementationClass="org.consulo.lombok.pg.processors.impl.AutoGenMethodStubProcessor"/>
		<processor annotationClass="lombok.ListenerSupport"
				   implementationClass="org.consulo.lombok.pg.processors.impl.ListenerSupportAnnotationProcessor"/>
		<processor annotationClass="lombok.BoundSetter" implementationClass="org.consulo.lombok.pg.processors.impl.BoundSetterAnnotationProcessor"/>
	</extensions>
</idea-plugin>
