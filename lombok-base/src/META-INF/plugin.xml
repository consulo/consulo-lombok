<idea-plugin version="2">
  <id>com.intellij.lombok</id>
  <name>Lombok Support</name>
  <description>TODO</description>
  <vendor>JetBrains</vendor>
  <resource-bundle>messages.LombokBaseBundle</resource-bundle>

  <extensionPoints>
    <extensionPoint name="processor" beanClass="com.intellij.lombok.processors.LombokProcessorEP" >
      <with attribute="implementationClass" implements="com.intellij.lombok.processors.LombokProcessor"/>
    </extensionPoint>
  </extensionPoints>

  <extensions defaultExtensionNs="com.intellij">
    <!--Accessors-->
    <lombok.processor annotationClass="lombok.Data" implementationClass="com.intellij.lombok.processors.DataAnnotationProcessor" />
    <lombok.processor annotationClass="lombok.Getter" implementationClass="com.intellij.lombok.processors.GetterAnnotationProcessor" />
    <lombok.processor annotationClass="lombok.Setter" implementationClass="com.intellij.lombok.processors.SetterAnnotationProcessor" />
    <lombok.processor annotationClass="lombok.ToString" implementationClass="com.intellij.lombok.processors.ToStringAnnotationProcessor" />
    <lombok.processor annotationClass="lombok.EqualsAndHashCode" implementationClass="com.intellij.lombok.processors.EqualsAndHashCodeAnnotationProcessor" />

    <lombok.processor annotationClass="lombok.Delegate" implementationClass="com.intellij.lombok.processors.DelegateAnnotationProcessor" />
    <!--#ArgsConstructor-->
    <lombok.processor annotationClass="lombok.NoArgsConstructor" implementationClass="com.intellij.lombok.processors.NoArgsConstructorAnnotationProcessor" />
    <lombok.processor annotationClass="lombok.AllArgsConstructor" implementationClass="com.intellij.lombok.processors.AllArgsConstructorAnnotationProcessor" />
    <lombok.processor annotationClass="lombok.RequiredArgsConstructor" implementationClass="com.intellij.lombok.processors.RequiredArgsConstructorAnnotationProcessor" />
    <!--Loggers-->
    <lombok.processor annotationClass="lombok.extern.log4j.Log4j" implementationClass="com.intellij.lombok.processors.Log4jAnnotationProcessor" />
    <lombok.processor annotationClass="lombok.extern.java.Log" implementationClass="com.intellij.lombok.processors.LogAnnotationProcessor" />
    <lombok.processor annotationClass="lombok.extern.apachecommons.CommonsLog" implementationClass="com.intellij.lombok.processors.CommonsLogAnnotationProcessor" />
    <lombok.processor annotationClass="lombok.extern.slf4j.Slf4j" implementationClass="com.intellij.lombok.processors.Slf4jAnnotationProcessor" />
    <lombok.processor annotationClass="lombok.extern.slf4j.XSlf4j" implementationClass="com.intellij.lombok.processors.XSlf4jAnnotationProcessor" />

    <!--Inspections-->
    <localInspection implementationClass="com.intellij.lombok.codeInsight.LombokLocalInspection" displayName="Lombok Errors" groupKey="inspection.group.name" enabledByDefault="true" level="ERROR"/>
    <localInspection implementationClass="com.intellij.lombok.codeInsight.typeCanBeReplacedByVal.TypeCanBeReplacedByValInspection" displayName="Type can be replaced by 'lombok.val'" groupKey="inspection.group.name" enabledByDefault="true" level="WARNING"/>

    <java.extraExceptionHandler implementation="com.intellij.lombok.codeInsight.LombokExtraExceptionHandler" />

    <!--psi-->
    <lang.psiAugmentProvider implementation="com.intellij.lombok.psi.augment.LombokPsiAugmentProvider" />

    <lang.psi.elementFactory implementation="com.intellij.lombok.psi.LombokLangPsiElementFactory" />
    <lang.ast.compositeFactory implementation="com.intellij.lombok.psi.LombokASTCompositeFactory" />
  </extensions>
</idea-plugin>
